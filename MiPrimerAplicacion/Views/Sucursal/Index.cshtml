@using MiPrimerAplicacion.Models
@model List<SucursalCLS>

@{
    ViewBag.Title = "Index";
}

<h2>Sucursales</h2>

<div>
    @Html.ActionLink("Agregar","Agregar",null, new { @class="btn btn-primary"})
</div>
<br/>
<table class="table table-bordered table-hover">
    <thead>
        <tr style="background-color: #eeeeee">
            <td>@Html.LabelFor(p=>Model[0].iidsucursal)</td>
            <td>@Html.LabelFor(p=>Model[0].nombre)</td>
            <td>@Html.LabelFor(p=>Model[0].direccion)</td>
            <td>@Html.LabelFor(p=>Model[0].telefono)</td>
            <td>Editar</td>
            <td>Borrar</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>@item.iidsucursal</td>
            <td>@item.nombre</td>
            <td>@item.direccion</td>
            <td>@item.telefono</td>
            <td> @Html.ActionLink(" ", "Editar", "Sucursal", new {id = @item.iidsucursal},
                                 new {@class = "glyphicon glyphicon-edit btn btn-primary"})</td>
            <td>@Html.ActionLink(" ","Eliminar","Sucursal", new {id=@item.iidsucursal},
                                new {@class="glyphicon glyphicon-trash btn btn-danger"})</td>
        </tr>
        }
    </tbody>
</table>

